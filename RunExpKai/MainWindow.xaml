<Window x:Class="RunExpKai.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="650" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="Fleet_2_Select" Margin="10" SelectionChanged="Fleet_2_Select_SelectionChanged"/>
            <Button x:Name="Fleet_2_Start" Content="Start" Grid.Column="1" Margin="10" Click="Fleet_2_Start_Click"/>
            <Button x:Name="Fleet_2_Stop" Content="Stop" Grid.Column="2" Margin="10" Click="Fleet_2_Stop_Click"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="Fleet_3_Select" Margin="10" SelectionChanged="Fleet_3_Select_SelectionChanged"/>
            <Button x:Name="Fleet_3_Start" Content="Start" Grid.Column="1" Margin="10" Click="Fleet_3_Start_Click"/>
            <Button x:Name="Fleet_3_Stop" Content="Stop" Grid.Column="2" Margin="10" Click="Fleet_3_Stop_Click"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="Fleet_4_Select" Margin="10" SelectionChanged="Fleet_4_Select_SelectionChanged"/>
            <Button x:Name="Fleet_4_Start" Content="Start" Grid.Column="1" Margin="10" Click="Fleet_4_Start_Click"/>
            <Button x:Name="Fleet_4_Stop" Content="Stop" Grid.Column="2" Margin="10" Click="Fleet_4_Stop_Click"/>
        </Grid>
        <Grid Grid.Row="6" Background="#FF424242">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="31*"/>
                <ColumnDefinition Width="16*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="ConsoleOutput" Margin="10" TextWrapping="Wrap" Foreground="White" FontSize="16" Grid.ColumnSpan="2"/>
        </Grid>
    </Grid>
</Window>
